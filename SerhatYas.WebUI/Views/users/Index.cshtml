
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model SerhatYas.WebUI.Models.ServiceVM



<div class="card">
    <div class="card-header">
        <h1>User List</h1>
    </div>
    <div class="card-body">
        <div class="col-md-12 mb-5">
            <a href="/users/create" class="btn btn-primary " style="margin-left:auto;">Add User</a>

        </div>
        <div class="col-md-12 " style="margin-top:3rem">
            <table class="table table-striped table-bordered table-hover" id="myTable">
                <thead>
                    <tr>
                        <th scope="col">User</th>
                        <th scope="col">Role</th>
                        <th scope="col">Project</th>
                        <th scope="col">Last Online</th>
                        <th>Statu</th>
                        <th class="text-center" scope="col">Options</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.UserList.Count; i++)
                    {
                        <tr>
                           
                            <td class="text-center" scope="row"><img style="height:40px;width:auto;border-radius:50%" src="@Model.UserList[i].Photo" />
                            <span>@Model.UserList[i].DisplayName</span>
                            </td>
                          <td>@Model.UserList[i].Job</td>
                            <td>ss</td>
                            <td>@Model.UserList[i].LastLoginDate.ToString("dd.MM.yy HH:mm")</td>
                            <td>
                                @if(Model.UserList[i].IsPassive)
                {
                    <span class="badge badge-warning">Passive</span>
                }
                else
                {
                    <span class="badge badge-success">Active</span>
                }
                            </td>
                            <td class="text-center">
                                <a href="/users/update/@Model.UserList[i].Id" class="btn btn-primary">Edit</a>
                                @if (Model.UserList[i].IsPassive)
                                {
                                    <a href="/users/passive/@Model.UserList[i].Id" class="btn btn-success">Active</a>

                                }
                                else
                                {
                                    <a href="/users/passive/@Model.UserList[i].Id" class="btn btn-warning">Passive</a>

                                }
                                <a href="/users/delete/@Model.UserList[i].Id" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>

