
@{
    ViewData["Title"] = "Index";
    Layout = null;
}
@model SerhatYas.WebUI.Models.ServiceVM
<html>
<head>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

</head>
<body style="min-height:100vh">
    <div class="col-md-12">
        <div class="col-md-12 d-flex justify-content-center">
            <form action="/login/index" method="post">
                <div class="col-md-12 d-flex justify-content-center">
                    <img style="height:40px;width:auto;border-radius:50%" src="/uploads/key.png" />
                </div>
                <div class="form-group">
                    <label class="text-muted">E-Mail</label>
                    <input class="form-control" type="email" required asp-for="@Model.User.Mail" />

                </div>
                <div class="form-group">
                    <label class="text-muted">Password</label>
                    <input class="form-control" type="password" required asp-for="@Model.User.Password" />

                </div>

                <button type="submit" class="btn btn-success">Giriş Yap</button>
            </form>
        </div>

    </div>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</body>
</html>
